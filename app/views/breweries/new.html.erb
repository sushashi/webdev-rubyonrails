<% content_for :title, "New brewery" %>

<h1 class="mt-3">New brewery</h1>

<% if @brewery.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>

    <ul>
      <% brewery.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@brewery) do |form| %>
  <div class="mb-2">
    <%= form.label :name, class:'form-label' %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :year, class:'form-label' %>
    <%= form.number_field :year, class:'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :active  %>
    <%= form.check_box :active , class:"form-check-input"%>
  </div>

  <div>
    <%= form.submit "New Brewery", class:"btn btn-primary"%>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Back to breweries", breweries_path %>
</div>
