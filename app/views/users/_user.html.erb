<div id="<%= dom_id user %>">
  <p>
    <strong><%= link_to user.username, user_path(user.id) %></strong>
    <% if user.closed? or user.closed.nil? %>
      <span class="badge bg-danger">Closed</span>
    <% else %>
      <span class="badge bg-primary">Active</span>
    <% end %>
    <li>Has made <%= "#{user.ratings.size}"%> ratings, average rating <%= "#{user.average_rating}" %></li>
  </p>


</div>
