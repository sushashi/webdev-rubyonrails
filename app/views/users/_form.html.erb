<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="container">
    <div class="col-sm-6">
      <% if @user.new_record? %>
      
      <div class="mb-2">
        <%= form.label :username, style: "display: block" %>
        <%= form.text_field :username, class:"form-control form-control-sm" %>
      </div>
      <% end %>

      <div class="mb-2">
        <%= form.label :password, style: "display: block" %>
        <%= form.password_field :password, class:"form-control form-control-sm" %>
      </div>

      <div class="mb-2">
        <%= form.label :password_confirmation, style: "display:block" %>
        <%= form.password_field :password_confirmation, class:"form-control form-control-sm" %>
      </div>

      <div>
        <%= form.submit "Sign up", class:"btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>

<% end %>
