<div id="<%= dom_id beer %>">
  <% cache @beer do %>
  <h2>
    <%= beer.name %>
  </h2>

  <p>
    <strong>Style:</strong>
    <%= link_to beer.style.name, style_path(beer.style.id) %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, brewery_path(beer.brewery.id) %>
  </p>

  <p>
    <%= link_to "All breweries", breweries_path %>
  </p>
  
  <p>
    <% if beer.ratings.empty? %>
      Beer has not yet been rated!
    <% else %>
      Beer has <%= pluralize(beer.ratings.count, 'rating') %> with an average of <%= beer.average_rating %>
    <% end %>
  </p>
  
  <% end %>

</div>