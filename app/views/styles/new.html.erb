<% content_for :title, "New style" %>

<h1 class="mt-3">New style</h1>

<% if @style.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(@style.errors.count, "error") %> prohibited this style from being saved:</h2>

    <ul>
      <% style.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@style) do |form| %>
  <div class="mb-2">
    <%= form.label :name, class:'form-label'%>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :description, class:'form-label' %>
    <%= form.textarea :description, class:'form-control' %>
  </div>

  <div>
    <%= form.submit "Create Style", class:"btn btn-primary" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to styles", styles_path %>
</div>
