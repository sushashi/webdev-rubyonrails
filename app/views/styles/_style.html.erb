<div id="<%= dom_id style %>">
  <p>
    <strong>Name:</strong>
    <%= style.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= style.description %>
  </p>

  <div>
    <strong>Beers:</strong>
    <ul>
      <% @style.beers.each do |beer| %>
        <li>
          <%= beer.name %>
        </li>
      <% end %>
    </ul>
  </div>


</div>
