<p style="color: green"><%= notice %></p>

<% content_for :title, "Beerclubs" %>

<h1>Beerclubs</h1>

<div id="beerclubs">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= link_to "Name", beerclubs_path(order:"name") %></th>
        <th><%= link_to "City", beerclubs_path(order:"city") %></th>
        <th><%= link_to "Foundation Year", beerclubs_path(order:"founded") %></th>
      </tr>
    </thead>
    <tbody>
      <% @beerclubs.each do |beerclub| %>
        <tr>
          <td><%= link_to beerclub.name, beerclub_path(beerclub.id) %></td>
          <td><%= beerclub.city %></td>
          <td><%= beerclub.founded %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to "New beerclub", new_beerclub_path , class:'btn btn-primary' if current_user%>
</div>
