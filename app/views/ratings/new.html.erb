<h1 class="mt-3">Create new rating</h1>

<%= form_for(@rating) do |f| %>
    <% if @rating.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@rating.errors.count, "error") %> prohibited rating from being saved:</h2>
            <ul>
            <% @rating.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="mb-2 mt-4">
        <div class="col-sm-8">
            <div class="mb-2">
                <%= f.select :beer_id, options_from_collection_for_select(@beers, :id, :to_s, selected: @rating.beer_id), {}, { :class => 'form-select' } %>
            </div>
            <div class="mb-2">
                <%= f.number_field :score, class:"form-control", placeholder:"Score"%>
            </div>
             <%= f.submit "Rate", class:"btn btn-primary" %>
        </div>
    </div>
<% end %>