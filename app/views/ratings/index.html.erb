<p>
  <%= link_to "New rating", new_rating_path %>
</p>


<h1>List of ratings</h1>

<p>There are <%= pluralize(Rating.count, "rating") %></p>

<div id="ratings">
  <ul>
    <% @ratings.each do |rating| %>
      <li>
        <%= rating %> | <%= link_to rating.user.username, user_path(rating.user.id) %>
      </li>
    <% end %>

  </ul>
</div>